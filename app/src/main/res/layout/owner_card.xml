<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15px"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewOwnerName"
            android:text="Name"
            android:paddingTop="5dp"
            android:textSize="20dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewOwnerAddress"
            android:text="Address"
            android:paddingTop="5dp"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

        </TextView>

    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewOwnerEmail"
        android:text="view Owner Email"
        android:textColor="@color/colorAddProperty"
        android:textSize="20sp"
        android:layout_marginTop="10dp">
    </TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewOwnerPhone"
        android:text="Phone Number"
        android:background="@color/colorAddProperty"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="10dp">

    </Button>

</LinearLayout>