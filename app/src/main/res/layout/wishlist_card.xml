<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_bg"
    android:layout_margin="10dp"
    android:id="@+id/wishlistcard"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgProperty"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/idLove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fav2"
        app:layout_constraintEnd_toEndOf="@+id/imgProperty"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/idLove"
        android:text="+favorite"
        app:layout_constraintTop_toBottomOf="@id/idLove"
        app:layout_constraintStart_toStartOf="@+id/idLove"
        android:textStyle="bold"
       ></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propertyTitle"
        android:hint="Title of the Property"
        android:layout_marginVertical="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgProperty"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propertyPrice"
            android:hint="Price of the Property"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_attach_money_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/propertyTitle"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propertyLocation"
            android:drawableStart="@drawable/ic_place_black_24dp"
            android:hint="Location of the Property"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/propertyPrice"

            />

</androidx.constraintlayout.widget.ConstraintLayout>