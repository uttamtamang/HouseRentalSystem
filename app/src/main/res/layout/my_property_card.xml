<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_bg"
    android:id="@+id/my_constProperty"
    android:layout_margin="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgProperty"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:padding="5dp"
        android:src="@drawable/logo2"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propertyTitle"
        android:hint="Title of the Property"
        android:layout_marginVertical="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgProperty"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propertyPrice"
        android:hint="Price of the Property"
        android:layout_marginVertical="5dp"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/propertyTitle"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propertyLocation"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:hint="Location of the Property"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/propertyPrice"

        />



</androidx.constraintlayout.widget.ConstraintLayout>