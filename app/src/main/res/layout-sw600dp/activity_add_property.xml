       <EditText
           android:id="@+id/facility1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/rounded_textinput"
           android:hint="1st facility"
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp">

       </EditText>
       <EditText
           android:id="@+id/facility2"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/rounded_textinput"
           android:hint="2nd facility"
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp">

       </EditText>
       <EditText
           android:id="@+id/facility3"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/rounded_textinput"
           android:hint="3rd facility"
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp">

       </EditText>
       <EditText
           android:id="@+id/facility4"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
