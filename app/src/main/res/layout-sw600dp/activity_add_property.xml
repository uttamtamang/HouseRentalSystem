           android:background="@drawable/rounded_textinput"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp"/>

       <EditText
           android:id="@+id/propertyPrice"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/rounded_textinput"
           android:hint="Price of the property."
           android:inputType="number"
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp"/>
       <EditText
           android:id="@+id/propertyAddress"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/rounded_textinput"
           android:hint="Address of the property."
           android:padding="10dp"
           android:textSize="15sp"
           android:layout_margin="5dp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Category"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginHorizontal="5dp"
           android:layout_margin="5dp"/>

       <Spinner
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/propertyCategorySpinner"
           android:spinnerMode="dropdown"
           android:layout_margin="5dp"
           android:background="@color/colorYellow"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Purpose"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginHorizontal="5dp"
           android:layout_margin="5dp"/>

       <Spinner
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/propertyPurposeSpinner"
           android:spinnerMode="dropdown"
           android:layout_marginBottom="5dp"
           android:layout_marginHorizontal="5dp"
           android:background="@color/colorPanel"/>

       <TextView
