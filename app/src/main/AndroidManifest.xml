<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meroghar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    //sensor permission
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MyPropertyActivity" android:parentActivityName=".DashboardActivity"></activity>
        <activity android:name=".UpdatePropertyActivity" android:parentActivityName=".DashboardActivity"/>
        <activity
            android:name=".DisplayPropertyActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".ProfileEditActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".AddPropertyActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".MeroGharSplashScreenActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>